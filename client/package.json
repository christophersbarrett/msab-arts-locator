{
  "name": "msab-art-locator-client",
  "version": "0.0.1",
  "description": "Front end client for MSAB mobile Arts Locator application.",
  "author": "Flexion Inc.",
  "license": "MIT",
  "main": "sass/main.scss",
  "scripts": {
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand .*test\\.js$",
    "fix": "prettier --write",
    "test": "jest .*test\\.js$",
    "build-task:scss-compile": "node-sass sass/ -o dist/css",
    "build-task:autoprefixer": "postcss dist/css/*.css --use autoprefixer -d dist/css",
    "sass:build": "npm run build-task:scss-compile && npm run build-task:autoprefixer",
    "test:watch": "jest --watch .*test\\.js$",
    "test:unit": "jest --config jest-unit.config.js ./src/.*test\\.js$",
    "test:e2e": "jest --config jest-e2e.config.js ./e2e/.*test\\.js$",
    "test:pa11y": "pa11y-ci --config pa11y-ci.config.json",
    "test:all": "npm run lint && npm run test && npm run test:pa11y && npm run cypress",
    "lint": "eslint . && eslint ./**/*.jsx && stylelint ./**/*.scss",
    "lint:fix": "eslint --fix . && eslint --fix ./**/*.jsx && stylelint --fix ./**/*.scss",
    "start": "npm run sass:build && parcel index.pug --port 5678 ",
    "build": "parcel build index.pug"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flexion/msab-arts-locator.git"
  },
  "bugs": {
    "url": "https://github.com/flexion/msab-arts-locator/issues"
  },
  "homepage": "https://github.com/flexion/msab-arts-locator#readme",
  "dependencies": {
    "@babel/core": "^7.4.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@cerebral/react": "^4.1.0",
    "ajv": "^6.10.0",
    "ajv-errors": "^1.0.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-cerebral": "^1.0.1",
    "bloomer": "^0.6.5",
    "cerebral": "^5.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-sort-keys-fix": "^1.0.1",
    "jest": "^24.5.0",
    "papaparse": "^4.6.3",
    "parcel-bundler": "^1.12.3",
    "pug": "^2.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sass": "^1.17.3",
    "stylelint": "^9.10.1",
    "stylelint-config-idiomatic-order": "^6.2.0",
    "stylelint-config-standard": "^18.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "bulma": "^0.7.4",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.2"
  }
}
